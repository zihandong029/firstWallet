{
  "name": "simple-crypto-wallet",
  "displayName": "Simple Crypto Wallet",
  "version": "1.0.0",
  "description": "A simple and secure EIP-6963 compatible crypto wallet extension",
  "author": "metamode",
  "scripts": {
    "dev": "plasmo dev && node fix-manifest.js",
    "build": "plasmo build && node fix-manifest.js",
    "build:clean": "plasmo build",
    "package": "plasmo package",
    "test-server": "node dev-server.js",
    "test": "node dev-server.js"
  },
  "dependencies": {
    "plasmo": "0.90.5",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "ethers": "^6.8.1",
    "bip39": "^3.1.0",
    "hdkey": "^2.1.0",
    "secp256k1": "^5.0.0",
    "crypto-js": "^4.2.0",
    "@types/crypto-js": "^4.1.3",
    "assert": "^2.0.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@types/bip39": "^3.0.0",
    "@types/hdkey": "^2.0.1",
    "@types/secp256k1": "^4.0.6",
    "prettier": "3.2.4",
    "typescript": "5.3.3",
    "tailwindcss": "^3.4.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
